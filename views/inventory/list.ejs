<%- include ../partials/header.ejs %>

<!-- using jumbotron like in service ejs, get the js file from routes -->
<div class="container py-4 p-0">
    <main class="p-10 px-4 py-4 mb-0 bg-dark text-white rounded-3">
    <div class="row">
        <h1 class="display-5 fw-bold"><%= title %></h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center : h-100 p-3 text-white bg-dark rounded-3">Contact Name</th>
                    <th class="text-center : h-100 p-3 text-white bg-dark rounded-3">Contact Number</th>
                    <th class="text-center : h-100 p-3 text-white bg-dark rounded-3">Email Address</th>
                    <th class="text-center : h-100 p-3 text-white bg-dark rounded-3" colspan="2">Actions</th>
                </tr>
                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < InventoryList.length; count++) { %>
                    <tr>
                        <td class="text-center : h-100 p-3 text-white bg-dark rounded-3""><%= InventoryList[count].item %></td>
                        <td class="text-center : h-100 p-3 text-white bg-dark rounded-3""><%= InventoryList[count].qty %></td>
                        <td class="text-center : h-100 p-3 text-white bg-dark rounded-3""><%= InventoryList[count].status %></td>
                        <td class="text-center : h-100 p-3 text-white bg-dark rounded-3"">
                            <a href="/inventory/edit/<%= InventoryList[count]._id %>" class="btn btn-dark">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/inventory/delete/<%= InventoryList[count]._id %>" class="btn btn-dark">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
        <div>
            <a href="/inventory/add" class="btn btn-dark p-2" role="button">
            <i class="fas fa-user-plus"></i><span class="px-3">Add Contact</span> 
                
            </a>                
        </div>
    </div>
    </main>
</div>

<%- include ../partials/footer.ejs %>