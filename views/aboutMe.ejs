<% include partials/header.ejs %>

<!--used card body bootstrap combined with tables and lists -->
    <div class="container py-3">
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4 bg-dark">
            <div class="card-body text-center bg-dark text-white">
              <img src="/images/photo.png" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <h3 class="my-3"><%= nickName %></h3>
              <p class="text-muted mb-1">Future Software Developer</p>      
              <h3 class="my-3">About Me</h3>
              <p class="text-muted mb-4"><%= descriptionOfMe %></p>
              <h3 class="my-3">Top Skills</h3>
              <ul class="list-group">
                <li class="list-group-item bg-dark text-white">Critical thinking</li>
                <li class="list-group-item bg-dark text-white">Task Prioritization</li>
                <li class="list-group-item bg-dark text-white">Team Collaboration</li>
                <li class="list-group-item bg-dark text-white">Planning</li>
                <li class="list-group-item bg-dark text-white">Documentation</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="card mb-4 bg-dark text-white">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= fullName %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Gender</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= gender %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Date of Birth</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= dateOfBirth %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Religion</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= religion %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Nationality</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= nationality %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Hobbies</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= hobbies %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Address</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= address %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Curicculum Vitae</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><a href="pdf/ARVIN ALMARIO CV.pdf">click here to open</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>


