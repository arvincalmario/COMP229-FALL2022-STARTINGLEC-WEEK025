<%- include ../partials/header.ejs %>

<!-- jumbotron with table and form using bootstrap 5 -->
<div class="container py-4">    
    <div class="p-5 mb-4 bg-dark text-white rounded-3">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="/images/logo.PNG"
                    class="img-fluid" >
                </div>
                <div class="col-md-8 col-lg-6 offset-xl-1">
                <form action="/users/signin" method="post">        
                    <!-- username input -->
                    <div class="form-outline mb-8; form-group">
                    <input type="text" name="username" class="form-control form-control-lg"
                        placeholder="please type in your username" />
                    <label>Username</label>
                    </div>
        
                    <!-- Password input -->
                    <div class="form-outline mb-3; form-group">
                    <input type="password" name="password" class="form-control form-control-lg"
                        placeholder="please type in your password" />
                    <label>Password</label>
                    </div>
               
                    <div class="text-center text-lg-start mt-2 mb-3; form-group">
                    <input class="btn btn-secondary" type="submit" value="Log In"
                    <p class="small fw-bold mt-2 pt-1 mb-0"> Don't have an account? <a href="/users/signup"
                        class="link-danger" >Register</a></p>
                    </div>
        
                </form>
                </div>
            </div>
            </div>
    </div>
</div>


<%- include ../partials/footer.ejs %>
 
